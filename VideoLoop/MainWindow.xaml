<Window x:Class="VideoLoop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Video Loop"
        Height="320"
        Width="520"
        MinWidth="360"
        MinHeight="240"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
    <Grid Margin="32">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Video Loop"
                       FontSize="28"
                       FontWeight="Semibold"
                       TextAlignment="Center"
                       Margin="0,0,0,16" />
            <TextBlock x:Name="InstructionText"
                       Text="Select a folder to serve its videos to your browser."
                       TextWrapping="Wrap"
                       FontSize="14"
                       TextAlignment="Center"
                       Margin="0,0,0,16" />
            <TextBlock x:Name="StatusText"
                       Text=""
                       FontSize="16"
                       FontWeight="SemiBold"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,12" />
            <TextBlock x:Name="ServerUrlText"
                       Text=""
                       FontFamily="Consolas"
                       FontSize="14"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Visibility="Collapsed"
                       Margin="0,0,0,20" />
            <Button x:Name="OpenBrowserButton"
                    Content="Open In Browser"
                    Width="160"
                    Height="38"
                    Visibility="Collapsed"
                    Click="OnOpenBrowserClicked" />
        </StackPanel>
    </Grid>
</Window>
